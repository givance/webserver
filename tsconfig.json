{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "trigger.config.ts"
  ],
  "exclude": [
    "node_modules", 
    "src/scripts", 
    "worktrees",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts", 
    "**/*.spec.tsx",
    "src/__tests__/**/*",
    "playwright/**/*",
    "playwright.config.ts",
    "playwright.config.headless.ts",
    "global.setup.ts",
    "global.teardown.ts",
    "jest.config.js",
    "run-component-tests.js",
    "e2e/**/*",
    "test-db/**/*",
    "test-results/**/*",
    "playwright-report/**/*",
    "coverage/**/*",
    "test-*.js",
    "test-*.ts",
    "**/*.setup.ts",
    "**/*.teardown.ts"
  ]
}
